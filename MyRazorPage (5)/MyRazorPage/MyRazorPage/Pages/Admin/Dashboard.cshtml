@page
@model MyRazorPage.Pages.Admin.DashboardModel
@{
}
<div id="content-left">
    <ul>
        <a href="/admin/dashboard">
        <li>Dashboard</li></a>
        <a href="/admin/order">
        <li>Orders</li></a>
        <a href="/admin/product/index">
        <li>Products</li></a>
        <a href="/admin/customer/index">
        <li>Customers</li></a>
        <a href="/admin/employee/index">
        <li>Employees</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path-admin">DASHBOARD</b></div>
    <div class="content-main">
        <div id="content-main-dashboard">
            <div id="dashboard-1">
                <div id="dashboard-1-container">
                    <div class="dashboard-item">
                        <div class="dashboard-item-title">Weekly Sales</div>
                        <div class="dashboard-item-content">$@Model.totalOrderWeekly</div>
                    </div>
                    <div class="dashboard-item">
                        <div class="dashboard-item-title">Total Orders</div>
                        <div class="dashboard-item-content">$@Model.totalOrder</div>
                    </div>
                    <div class="dashboard-item">
                        <div class="dashboard-item-title">Total Customers</div>
                        <div class="dashboard-item-content">@Model.totalCustomer</div>
                    </div>
                    <div class="dashboard-item">
                        <div class="dashboard-item-title">Total Guest</div>
                        <div class="dashboard-item-content">@Model.totalGuest</div>
                    </div>
                </div>
            </div>
            <div id="totalCustomer" hidden>@Model.totalCustomer</div>
            <div id="newCustomer" hidden>@Model.newCustomer</div>
            <div id="jan" hidden>@Model.jan</div>
            <div id="feb" hidden>@Model.feb</div>
            <div id="mar" hidden>@Model.mar</div>
            <div id="apr" hidden>@Model.apr</div>
            <div id="may" hidden>@Model.may</div>
            <div id="jun" hidden>@Model.jun</div>
            <div id="jul" hidden>@Model.jul</div>
            <div id="aug" hidden>@Model.aug</div>
            <div id="sep" hidden>@Model.sep</div>
            <div id="oct" hidden>@Model.oct</div>
            <div id="nov" hidden>@Model.nov</div>
            <div id="dec" hidden>@Model.dec</div>
            <div id="dashboard-2">
                <div id="chart" style="text-align: center;">
                    <div id="chart1">
                        <div style="display:flex">
                            <label style="font-weight:bold; margin-right:5px">Year: </label>
                            <form method="get">
                                <select name="ddlYears" onchange="this.form.submit()">
                                    <option disabled>--- Select ---</option>
                                    @foreach (var item in Model.years)
                                    {
                                        if (item == Int32.Parse(ViewData["year"].ToString()))
                                        {
                                            <option value="@item" selected>@item</option>
                                        }
                                        else
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    }
                                </select>
                            </form>
                        </div>
                        <h3>Statistic Orders (Month)</h3>
                        <canvas id="myChart1" style="width: 100%;"></canvas>
                    </div>
                    <div id="chart2">
                        <canvas id="myChart2" style="width: 80%;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>